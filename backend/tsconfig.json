{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "ESNext",                            
    "lib": ["DOM", "DOM.Iterable", "ESNext"],        
    "jsx": "react-jsx",                             
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                      
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                 
    "skipLibCheck": true                            
  },
  "include": ["src"],                               
  "exclude": ["node_modules", "dist"]              
}
